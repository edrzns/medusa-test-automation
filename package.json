{
  "name": "medusa-test-automation",
  "version": "1.0.0",
  "description": "Automated testing framework for Medusa e-commerce platform",
  "scripts": {
    "docker:build": "docker compose -f docker/docker-compose.yml build",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f medusa-backend",
    "docker:ps": "docker compose -f docker/docker-compose.yml ps",
    "setup": "npm install && npm run docker:build && npm run docker:up",
    "admin:create": "./scripts/create-admin.sh",
    "test": "npx playwright test",
    "test:api": "npx playwright test --project=api",
    "test:e2e": "npx playwright test --project=chromium-e2e",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report"
  },
  "keywords": [
    "medusa",
    "testing",
    "e2e",
    "api",
    "playwright"
  ],
  "author": "Edijs Rozens",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1"
  }
}
